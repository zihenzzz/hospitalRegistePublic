<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pipilin.system.mapper.PSchedulingMapper">
    
    <resultMap type="PScheduling" id="PSchedulingResult">
        <result property="schedulingId"    column="scheduling_id"    />
        <result property="doctorId"    column="doctor_id"    />
        <result property="sectionId"    column="section_id"    />
        <result property="outpatienId"    column="outpatien_id"    />
        <result property="schedulingDate"    column="scheduling_date"    />
        <result property="timeSlot"    column="time_slot"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="totalNumber"    column="total_number"    />
        <result property="residualNumber"    column="residual_number"    />
        <result property="registrationFee"    column="registration_fee"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="doctorName"    column="doctor_name"    />
        <result property="sectionName"    column="section_name"    />
        <result property="outpatienName"    column="outpatien_name"    />
    </resultMap>

    <sql id="selectPSchedulingVo">
        select sc.scheduling_id, sc.doctor_id, sc.section_id, sc.outpatien_id, sc.scheduling_date, 
               sc.time_slot, sc.start_time, sc.end_time, sc.total_number, sc.residual_number, 
               sc.registration_fee, sc.status, sc.create_by, sc.create_time, sc.update_by, 
               sc.update_time, sc.remark,
               u.nick_name as doctor_name,
               s.section_name,
               o.outpatien_name
        from p_scheduling sc
        left join sys_user u on sc.doctor_id = u.user_id
        left join p_section s on sc.section_id = s.section_id
        left join p_outpatien o on sc.outpatien_id = o.outpatien_id
    </sql>

    <select id="selectPSchedulingList" parameterType="PScheduling" resultMap="PSchedulingResult">
        <include refid="selectPSchedulingVo"/>
        <where>  
            <if test="doctorId != null "> and sc.doctor_id = #{doctorId}</if>
            <if test="sectionId != null "> and sc.section_id = #{sectionId}</if>
            <if test="outpatienId != null "> and sc.outpatien_id = #{outpatienId}</if>
            <if test="schedulingDate != null "> and sc.scheduling_date = #{schedulingDate}</if>
            <if test="timeSlot != null  and timeSlot != ''"> and sc.time_slot = #{timeSlot}</if>
            <if test="status != null  and status != ''"> and sc.status = #{status}</if>
        </where>
        order by sc.scheduling_date desc, sc.time_slot
    </select>
    
    <select id="selectPSchedulingBySchedulingId" parameterType="Long" resultMap="PSchedulingResult">
        <include refid="selectPSchedulingVo"/>
        where sc.scheduling_id = #{schedulingId}
    </select>
        
    <insert id="insertPScheduling" parameterType="PScheduling" useGeneratedKeys="true" keyProperty="schedulingId">
        insert into p_scheduling
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="doctorId != null">doctor_id,</if>
            <if test="sectionId != null">section_id,</if>
            <if test="outpatienId != null">outpatien_id,</if>
            <if test="schedulingDate != null">scheduling_date,</if>
            <if test="timeSlot != null">time_slot,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="totalNumber != null">total_number,</if>
            <if test="residualNumber != null">residual_number,</if>
            <if test="registrationFee != null">registration_fee,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="doctorId != null">#{doctorId},</if>
            <if test="sectionId != null">#{sectionId},</if>
            <if test="outpatienId != null">#{outpatienId},</if>
            <if test="schedulingDate != null">#{schedulingDate},</if>
            <if test="timeSlot != null">#{timeSlot},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="totalNumber != null">#{totalNumber},</if>
            <if test="residualNumber != null">#{residualNumber},</if>
            <if test="registrationFee != null">#{registrationFee},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updatePScheduling" parameterType="PScheduling">
        update p_scheduling
        <trim prefix="SET" suffixOverrides=",">
            <if test="doctorId != null">doctor_id = #{doctorId},</if>
            <if test="sectionId != null">section_id = #{sectionId},</if>
            <if test="outpatienId != null">outpatien_id = #{outpatienId},</if>
            <if test="schedulingDate != null">scheduling_date = #{schedulingDate},</if>
            <if test="timeSlot != null">time_slot = #{timeSlot},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="totalNumber != null">total_number = #{totalNumber},</if>
            <if test="residualNumber != null">residual_number = #{residualNumber},</if>
            <if test="registrationFee != null">registration_fee = #{registrationFee},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where scheduling_id = #{schedulingId}
    </update>

    <delete id="deletePSchedulingBySchedulingId" parameterType="Long">
        delete from p_scheduling where scheduling_id = #{schedulingId}
    </delete>

    <delete id="deletePSchedulingBySchedulingIds" parameterType="String">
        delete from p_scheduling where scheduling_id in 
        <foreach item="schedulingId" collection="array" open="(" separator="," close=")">
            #{schedulingId}
        </foreach>
    </delete>
</mapper>



